#include<stdio.h>

int main()
{   int i, n;
    printf("Input value of n : ");
    scanf("%d",&n);
    int ara[n];

    for(i = 0; i < n; i++){
        printf("element %d : ",i);
        scanf("%d",&ara[i]);
    }

    printf("The values store into the array are : \n");
    for(i = 0; i < n; i++){
        printf(" %d ",ara[i]);
    }
    printf("\n\n");

    printf("The values store into the array in reverse are : \n");
    for(i = n-1; i>=0; i--){
     printf(" %d ",ara[i]);
	  }
     printf("\n\n");

    return 0;
}
