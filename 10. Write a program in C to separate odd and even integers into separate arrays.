#include<stdio.h>

int main()
{   int n;
    int i;
    printf("Input value of n : ");
    scanf("%d",&n);
    int ara[n];

    printf("Input 5 elements in the ara : \n");
    for(i = 0; i < n; i++){
        printf("element %d : ",i);
        scanf("%d",&ara[i]);
    }

    printf("The Even elements are : \n");
    for(i = 0; i < n; i++){
        if(ara[i] %2 == 0)
            printf(" %d ",ara[i]);
    }
    printf("\n\n");

    printf("The Odd elements are : \n");
    for(i = 0; i < n; i++){
        if(ara[i] %2 != 0)
            printf(" %d ",ara[i]);
    }
    printf("\n\n");

    return 0;
}
