#include<stdio.h>

int main()
{   int i, n;
    printf("Input value of n : ");
    scanf("%d",&n);
    int ara[100];
    int ara2[100];

    for(i = 0; i < n; i++){
        printf("element %d : ",i);
        scanf("%d",&ara[i]);
    }

    printf("The elements stored in the first array are : \n");
    for(i = 0; i < n; i++){
        printf(" %d ",ara[i]);
    }
    printf("\n\n");

    printf("The elements copied into the second array are : \n");
    for(i = 0; i < n; i++){
        ara2[i] = ara[i];
        printf (" %d ",ara2[i]);
    }


    return 0
